<body class="min-h-screen flex flex-col items-center py-8">
  <div class="w-full max-w-xl px-4">
    <!-- top banner ad slot (iframe-based) -->
    <div id="top-ad" class="mb-4 flex justify-center">
      <!-- Placeholder for banner ad -->
      <div class="w-full glass rounded-lg p-2 text-center">
        <div id="top-ad-container" class="mx-auto">Loading banner‚Ä¶</div>
      </div>
