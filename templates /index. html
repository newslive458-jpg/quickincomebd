  <!-- Monetag / LibTL / Custom ad SDK -->
  <!-- Using libtl example (you said zone 10070523) -->
  <script src="//libtl.com/sdk.js" data-zone="{{ MONETAG_ZONE_ID }}" data-sdk="show_{{ MONETAG_ZONE_ID }}"></script>

  <script>
    const WEBAPP_URL = "{{ WEBAPP_URL }}";
    const MIN_WITHDRAW = {{ MIN_WITHDRAW }};
    const TELEGRAM = window.Telegram ? window.Telegram.WebApp : null;

    // initialize UI
    document.getElementById('year').innerText = new Date().getFullYear();

    function bnFormat(n){
      try { return n.toLocaleString('bn-BD'); } catch(e){ return n; }
    }

    // load user data from telegram initData if available
    function loadInitial() {
      const user = TELEGRAM?.initDataUnsafe?.user;
      if (user) {
        document.getElementById('username-display').innerText = user.username || user.first_name || 'User';
        // query backend to get latest points
        fetch(`${WEBAPP_URL}/api/user_data?id=${user.id}&username=${user.username||user.first_name}`)
          .then(r=>r.json()).then(data=>{
            if (data.success) {
              document.getElementById('points-display').innerText = bnFormat(data.user.total_points || 0);
              if (data.user.is_admin) {
                // show admin UI if wanted
              }
            }
          }).catch(()=>{});
      } else {
        document.getElementById('username-display').innerText = 'Guest';
      }
    }

    document.addEventListener('DOMContentLoaded', loadInitial);

    // Reward flow using libtl SDK (show_XXXXX)
    const ZONE = "{{ MONETAG_ZONE_ID }}";
    const showFnName = `show_${ZONE}`;

    async function showRewardedAd() {
      const user = TELEGRAM?.initDataUnsafe?.user;
      if (!user) { alert("Open the mini app from Telegram to earn."); return; }
      const telegramId = user.id;
      try {
        // call ad show function provided by libtl (global)
        if (typeof window[showFnName] === 'function') {
          await window[showFnName]();
        } else {
          // fallback if SDK provides createAdHandler style
          if (typeof createAdHandler === 'function') {
            const ad = createAdHandler(ZONE);
            await ad();
          } else {
            alert("Ad SDK not available.");
            return;
          }
        }
        // on success: grant reward
        const rewardPoints = 50; // example reward
        await fetch(`${WEBAPP_URL}/api/add_points`, {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify({ telegramId, points: rewardPoints })
        });
        // refresh UI
        const resp = await fetch(`${WEBAPP_URL}/api/user_data?id=${telegramId}`);
        const j = await resp.json();
        if (j.success) document.getElementById('points-display').innerText = bnFormat(j.user.total_points);
        alert(`üéâ ‡¶Ü‡¶™‡¶®‡¶ø ${rewardPoints} ‡¶™‡¶Ø‡¶º‡ßá‡¶®‡ßç‡¶ü ‡¶™‡ßá‡¶Ø‡¶º‡ßá‡¶õ‡ßá‡¶®!`);
      } catch (e) {
        console.error(e);
        alert("Ad failed or was skipped. No reward.");
      }
    }

    document.getElementById('watch-ad-btn').addEventListener('click', showRewardedAd);

    // Withdraw
    document.getElementById('withdraw-btn').addEventListener('click', async () => {
      const user = TELEGRAM?.initDataUnsafe?.user;
      if (!user) { alert("Please open from Telegram."); return; }
      const telegramId = user.id;
      const points = parseInt(prompt("‡¶Ü‡¶™‡¶®‡¶ø ‡¶ï‡¶§ ‡¶™‡¶Ø‡¶º‡ßá‡¶®‡ßç‡¶ü ‡¶â‡¶á‡¶•‡¶°‡ßç‡¶∞ ‡¶ï‡¶∞‡¶§‡ßá ‡¶ö‡¶æ‡¶®? (‡¶™‡ßÅ‡¶∞‡ßã ‡¶∏‡¶Ç‡¶ñ‡ßç‡¶Ø‡¶æ ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®)", `${MIN_WITHDRAW}`));
      const account = prompt("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶™‡ßá‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü (bkash/nagad) ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶¶‡¶ø‡¶®", "");
      if (!points || !account) { alert("Invalid input."); return; }
      if (points < MIN_WITHDRAW) { alert(`‡¶®‡ßç‡¶Ø‡ßÇ‡¶®‡¶§‡¶Æ ‡¶â‡¶á‡¶•‡¶°‡ßç‡¶∞ ${MIN_WITHDRAW} ‡¶™‡¶Ø‡¶º‡ßá‡¶®‡ßç‡¶ü‡•§`); return; }
      try {
        const resp = await fetch(`${WEBAPP_URL}/api/request_withdraw`, {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify({ telegramId, points, account })
        });
        const j = await resp.json();
        if (j.success) {
          alert("Withdraw request submitted!");
          const r2 = await fetch(`${WEBAPP_URL}/api/user_data?id=${telegramId}`);
          const j2 = await r2.json();
          if (j2.success) document.getElementById('points-display').innerText = bnFormat(j2.user.total_points);
        } else {
          alert("Error: " + (j.message||""));
        }
      } catch (e) { alert("Network error."); }
    });

    // leaderboard
    document.getElementById('leaderboard-btn').addEventListener('click', async () => {
      toggleLeaderboard(true);
      const ul = document.getElementById('leaderboard-list');
      ul.innerHTML = 'Loading...';
      try {
        const resp = await fetch(`${WEBAPP_URL}/api/leaderboard`);
        const j = await resp.json();
        ul.innerHTML = '';
        if (j.success) {
          j.leaderboard.forEach((u, idx) => {
            const li = document.createElement('li');
            li.className = 'flex justify-between items-center';
            li.innerHTML = `<div>#${idx+1} <strong>${u.username||u.id}</strong></div><div class="font-bold text-amber-400">${bnFormat(u.points)}</div>`;
            ul.appendChild(li);
          });
        } else {
          ul.innerHTML = 'No data';
        }
      } catch (e) {
        ul.innerHTML = 'Error loading leaderboard';
      }
    });

    function toggleLeaderboard(show){ document.getElementById('leaderboard-modal').style.display = show ? 'flex' : 'none'; }

    // banner ad placeholders (you can replace with real iframe or libtl banner)
    document.getElementById('top-ad-container').innerHTML = `<iframe src="about:blank" style="width:100%;height:90px;border:none;border-radius:8px;"></iframe>`;
    document.getElementById('bottom-ad-container').innerHTML = `<iframe src="about:blank" style="width:100%;height:90px;border:none;border-radius:8px;"></iframe>`;
  </script>
</body>
