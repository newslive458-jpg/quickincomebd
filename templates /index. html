    <!-- leaderboard modal -->
    <div id="leaderboard-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/60">
      <div class="bg-slate-900 rounded-xl p-4 w-full max-w-md">
        <h3 class="font-bold text-lg mb-2">Leaderboard</h3>
        <ul id="leaderboard-list" class="space-y-2 text-sm"></ul>
